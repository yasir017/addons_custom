<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_product_template_tree" model="ir.ui.view">
        <field name="name">product.template.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <tree>
                <field name="main_vendor_id"/>
            </tree>
        </field>
    </record>

    <record id="view_product_template_search" model="ir.ui.view">
        <field name="name">product.template.search</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <search>
                <filter string="Vendor" name="group_by_vendor" context="{'group_by':'main_vendor_id'}"/>
            </search>
        </field>                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           
    </record>
</odoo>
